@using Proyecto1ED1.Models.Model
@using Proyecto1ED1.Models.Enums
@model Proyecto1ED1.Models.Model.ParaBusquedas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menu de busqueda</h1>
<br />
<br />
@using (Html.BeginForm("MenuBusquedas", "Hospital"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Parametro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Parametro, new SelectList(Enum.GetValues(typeof(Busqueda))),
         "Seleccione departamento", new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Buscar" class="btn btn-default" />
        </div>
    </div>
}



@using Proyecto1ED1.Models.Model
@model Proyecto1ED1.Models.Model.EstadisticaGeneral

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <html>
    <head>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawVisualization);

      function drawVisualization() {
        var data = google.visualization.arrayToDataTable([
          ['Hospital', 'Contagiados', 'Sospechosos Ingresados', 'Sospechosos contagiados', 'Sospechosos no contagiados', 'Recuperados'],
          ['Capital', @Html.ValueFor(Model=>Model.Capital.contagiadosIngresados), @Html.ValueFor(Model=>Model.Capital.sospechososIngresados), @Html.ValueFor(Model=>Model.Capital.sospechososPositivo), @Html.ValueFor(Model=>Model.Capital.sospechososNegativo), @Html.ValueFor(Model=>Model.Capital.egresados)],
          ['Peten',  @Html.ValueFor(Model=>Model.Peten.contagiadosIngresados), @Html.ValueFor(Model=>Model.Peten.sospechososIngresados), @Html.ValueFor(Model=>Model.Peten.sospechososPositivo), @Html.ValueFor(Model=>Model.Peten.sospechososNegativo), @Html.ValueFor(Model=>Model.Peten.egresados)],
          ['Escuintla',  @Html.ValueFor(Model=>Model.Escuintla.contagiadosIngresados), @Html.ValueFor(Model=>Model.Escuintla.sospechososIngresados), @Html.ValueFor(Model=>Model.Escuintla.sospechososPositivo), @Html.ValueFor(Model=>Model.Escuintla.sospechososNegativo), @Html.ValueFor(Model=>Model.Escuintla.egresados)],
          ['Quetzaltenango',  @Html.ValueFor(Model=>Model.Quetzaltenango.contagiadosIngresados), @Html.ValueFor(Model=>Model.Quetzaltenango.sospechososIngresados), @Html.ValueFor(Model=>Model.Quetzaltenango.sospechososPositivo), @Html.ValueFor(Model=>Model.Quetzaltenango.sospechososNegativo), @Html.ValueFor(Model=>Model.Quetzaltenango.egresados)],
          ['Oriente', @Html.ValueFor(Model=>Model.Oriente.contagiadosIngresados), @Html.ValueFor(Model=>Model.Oriente.sospechososIngresados), @Html.ValueFor(Model=>Model.Oriente.sospechososPositivo), @Html.ValueFor(Model=>Model.Oriente.sospechososNegativo), @Html.ValueFor(Model=>Model.Oriente.egresados)],
        ]);

        var options = {
          title : 'Comparacion entre hospitales',
          vAxis: {title: 'Pacientes'},
          hAxis: {title: 'Hospitales'},
          seriesType: 'bars',
          series: {5: {type: 'line'}}        };
        var chart = new google.visualization.ComboChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
        </script>
    </head>
    <body>
        <div id="chart_div" style="width: 900px; height: 500px;"></div>
    </body>
    </html>